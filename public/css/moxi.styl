negro = #000




#body
	background #e9eaed

header
	background negro
	color white
	
	
	.logo
		margin-top 10px
		img
			
			width 200px
			height 100px
			overflow hidden
	.avatar
		margin-top 10px
		img
			
			width 60px
			height 60px
			border-radius 50%
			
		p
			font-family cursive
			margin-left 12px
			margin-bottom -20px
			margin-top 5px
			font-size 20px
	.social
		.lista
			text-align center
			margin-top 30px
			span
				font-size 20px
				margin-right 5px
			
.menu
	a
		font-size 25px
	
section
	
	margin-top 2em
	
	.store
		border 1px  solid #444
		border-bottom-left-radius 0.8em
		border-bottom-right-radius 0.8em
		box-shadow 2px 2px 10px
		margin-top 15px
		overflow hidden
		
		img
			background #444
			height 180px
			width 160px
		.detalles
			h2,p
				margin-left 20px
			.direccion
			.telefono
				color blue


	
		
		
  			
		
		
			

				
	.acciones
		border-top 0.1em solid blue
		
		min-height 3em 
		.ubicacion,.comentario
			font-size 30px
			
footer
	background #000
	margin-top 2em
	height 100px

	h1
		margin-top 30px
		text-align center
		font-size 20px
	

article
	margin-top 20px

	.marca
		img
			position absolute
			top 0px
			right 50px
			max-width 60px
			height 40px
			border-radius 5px
			overflow hidden
	
	.botones
		float right
	.grid
		
		position relative
		margin: 1% 0 1% 1%
		box-shadow: 0px 0px 3px rgb(150, 150, 150)
		
		.imagen
			
			float none
			margin-left 10px
			max-width 100%
			max-height 100%
			overflow hidden
			
		.discount
			.percentage
				position absolute
				top 30px
				margin-left 10px
				width 42px
				height 42px
				background-image url(discount.png)
			span
				color #FFF
				text-align center
				font-size 1em
				font-weight bold
				line-height 40px
		.new
			position absolute
			top 0px
			right 10px
			width 50px
			height 70px
		h2
			font-size 15px
			
		p
			margin-top 10px
			text-align center
		
		.item.timer
			text-align center
			float left
		.compartirf
			
			text-align center
			margin-bottom 10px
			margin-top 10px
			float none
			bottom 0px
			font-size 15px
			margin-right 0px
		.compartirt
			
			text-align center
			margin-bottom 10px
			margin-top 10px
			float none
			bottom 0px
			font-size 15px
			margin-right 0px
		.details
			margin-right 60px
			
			
		
			
			
	
		.button
			
			margin-top 1em
			line-height 1.9em
			margin-left 10px
			width 100px
			height 50px
			margin-bottom 10px
			span
				font-size 15px
			
			
		.strike
			
			text-decoration line-through
			font-size 18px
			font-family 'Monda', sans-serif
			color #444
		.price
			
			font-size 18px
			font-family 'Monda', sans-serif
			color #CC3636
			margin-left 15px